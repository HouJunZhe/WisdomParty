
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>党建云平台</title>
    <link href="~/Scripts/qiantai/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Scripts/qiantai/webstyle.css" rel="stylesheet" />
</head>
<body>
    <div id="header" class="s-topbar">
        <div class="navigation page">
            <a href="#" class="logo-img">
                <div class="img-holder"></div>
                <img src="/images/1.jpg" />
                党建云平台
            </a>
            <div class="nav-left">
                <ul id="userinfo" class="userinfo">
                    <li><a href="/Default/Index" class="login">登录</a></li>
                    <li style="display: none;"><a href="#" class="register">注册</a></li>
                </ul>
            </div>
            <div class="menu">
                <ul>
                    <li class="dropdown">
                        <a href="#" class="dropdown-link-3">新闻资讯</a>
                    </li>
                    <li class="dropdown"><a href="#">党建要闻</a></li>
                    <li class="dropdown"><a href="#">政策法规</a></li>
                    <li class="dropdown"><a href="#">反腐倡廉</a></li>
                    <li class="dropdown"><a href="#">党史人物</a></li>
                    <li class="dropdown"><a href="#">帮助中心</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div id="content" class="content">


        <div class="login">
            <div class="page loginbox">

                <div class="loginbox-btn">
                    <div class="p" style="display: none;">
                        <span class="label label-info">密码登录</span>
                        <div class="l"><span class="glyphicon glyphicon-user"></span></div>
                    </div>
                    <div class="c" style="display: block;">
                        <span class="label label-info">扫码登录</span><div class="l"><span class="glyphicon glyphicon-qrcode"></span></div>
                    </div>
                    <div class="f"></div>
                </div>
                <div class="box">
                    <div class="lb by-c" style="display: none;">
                        <div class="title">
                            <h3>扫码登录</h3>
                        </div>
                        <div class="codebox">
                            <img src="/images/qrcode_service.jpg">
                        </div>
                    </div>
                    <div class="lb by-p" style="display: block;">
                        <div class="title">
                            <h3>密码登录</h3>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="usr" placeholder="用户名或手机号">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="pass" placeholder="请输入登录密码">
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary btn-block" onclick="javascript:location.href='/Qiantai/Index';">登 录</button>
                        </div>
                        <div class="form-group other">
                            <a href="javascript:">忘记密码</a>
                            <a href="javascript:">忘记登录名</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script>
            $('.loginbox-btn .l').on('click', function () {
                var pclass = $(this).parent().attr('class');
                console.log(pclass);
                if (pclass == 'p') {
                    $('.p').css({ 'display': 'none' });
                    $('.by-p').css({ 'display': 'block' });
                    $('.c').css({ 'display': 'block' });
                    $('.by-c').css({ 'display': 'none' });
                }
                else {
                    $('.p').css({ 'display': 'block' });
                    $('.by-p').css({ 'display': 'none' });
                    $('.c').css({ 'display': 'none' });
                    $('.by-c').css({ 'display': 'block' });
                }
            });
        </script>
    </div>
    <div id="footer" class="footer">
        <div class="f-box page">
            <div class="copyright">版权所有：上海两叶网络科技有限公司</div>
            <div class="">Copyright@2018 All rights reserved | 沪ICP备12568790号</div>
            <div>主办单位：上海两叶网络科技有限公司</div>
            <div>运行维护：上海两叶网络科技有限公司</div>
            <div>乔洲作品</div>
            <div class="flag-red"><img src="/images/6.png"></div>
        </div>
    </div>
</body>
</html>
